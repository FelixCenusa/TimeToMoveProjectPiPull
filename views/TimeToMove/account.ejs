<%- include('./../partials/header.ejs') %>

<h1>DELETE DELETE DELETE DELETE, <%= user.username %>!</h1>
<h2>Create a New Box</h2>
<form action="/create_box" method="POST">
    <div>
        <label for="label">Box Label:</label>
        <input type="text" id="label" name="label" required>
    </div>
    <div>
        <label for="isPublic">Is Public:</label>
        <select id="isPublic" name="isPublic">
            <option value="true">Public</option>
            <option value="false">Private</option>
        </select>
    </div>
    <button type="submit">Create Box</button>
</form>

<h2>Your Boasdasdxes</h2>

<div class="box-container">
    <!-- Display the user's boxes -->
    <% if (Array.isArray(boxes) && boxes.length > 0) { %>
        <% boxes.forEach(function(box) { %>
            <div class="box-card">
                <a href="/account/<%= user.username %>/<%= box.TitleChosen %>">
                    <h3><%= box.TitleChosen %></h3>
                </a>
                <p><strong>Is Public:</strong> <%= box.IsBoxPublic ? 'Yes' : 'No' %></p>
                <p><strong>Number of Files:</strong> <%= box.NrOfFiles %></p>
            </div>
        <% }); %>
    <% } else { %>
        <p>You have not created any boxes yet.</p>
    <% } %>
</div>


